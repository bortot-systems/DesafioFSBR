@model DesafioFSBR.Models.Processo

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Processo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeProcesso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeProcesso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NPU)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NPU)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataCadastro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataVisualizacao)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.DataVisualizacao.HasValue)
            {
                @Model.DataVisualizacao.Value.ToString("dd/MM/yyy HH:mm:ss")
            }
            else
            {
                <span></span>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UF)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UF)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Municipio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Municipio)
        </dd>        
    </dl>
</div>


<div>
    <form asp-action="ConfirmarVisualizacao" method="post" id="confirmarVisualizacaoForm">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="button" class="btn btn-primary" onclick="confirmarVisualizacao()">Confirmar Visualização</button>
    </form>
    <br />
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>


@section Scripts {
    <script type="text/javascript">
        function confirmarVisualizacao() {
            if (confirm('Tem certeza que deseja confirmar a visualização deste processo?')) {
                document.getElementById('confirmarVisualizacaoForm').submit();
            }
        }
    </script>
}
